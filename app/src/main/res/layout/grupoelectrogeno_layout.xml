<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/color_blanco"
    android:layout_gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="clip_horizontal">

            <TextView
                android:gravity="end"
                android:text="ID:"
                android:layout_marginRight="3dp"
                android:textColor="@color/color_negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/itemId"
                android:hint="ID"
                android:textColorHint="@color/color_gris"
                android:maxLength="30"
                android:inputType="text"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/color_gris"
                android:textColor="@color/color_negro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left">


            <TextView
                android:gravity="end"
                android:text="Comb %:"
                android:textColor="@color/color_negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/percent_comb"
                android:hint="Comb%"
                android:textColorHint="@color/color_gris"
                android:maxLength="10"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/color_gris"
                android:textColor="@color/color_negro"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
        android:layout_gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/color_negro"
                android:text="Temp °C:" />

            <EditText
                android:id="@+id/temperatura"
                android:hint="Temp °C"
                android:maxLength="10"
                android:textColorHint="@color/color_gris"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/color_gris"
                android:textColor="@color/color_negro"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <CheckBox android:id="@+id/checkAlarma"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:text="Alarma" android:layout_marginRight="10dp" />


        <CheckBox android:id="@+id/checkAuto"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:text="Auto"/>




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">


        <CheckBox android:id="@+id/cargadorbat"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/color_negro"
            android:text="Cargador Bat" />



        <CheckBox android:id="@+id/precalent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:text="Pre Calent"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <CheckBox android:id="@+id/nivelcomb75"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:text="Nivel Comb 75%" />


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/color_negro"
            android:text="Observaciones:" />

        <EditText android:id="@+id/entryDescripcion" android:hint="OBSERVACIONES"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:padding="5dp"
            android:backgroundTint="@color/color_gris"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:maxLength="150"
            android:gravity="top|start"
            android:lines="3"
            android:singleLine="false"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="3dp"
            android:minLines="1"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:textColorHint="@color/color_gris"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSaveData"
            android:layout_width="wrap_content"
            android:text="Guardar"
            android:layout_height="42dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="17dp"
            android:textColor="@color/color_blanco"
            android:background="@drawable/custom_button" />

    </LinearLayout>


</LinearLayout>

